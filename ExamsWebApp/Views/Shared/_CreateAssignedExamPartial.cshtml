@model CreateAssignedExamVM;

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            @if (!Model.IsCreated)
            {
                <h5 class="modal-title" id="assignExamToCourseModalLabel">Assign Exam to @Model.CourseName Course</h5>
            }
            else
            { 
                <h5 class="modal-title" id="assignExamToCourseModalLabel">Success!</h5>
            }
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (!Model.IsCreated)
            {
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FinishDate" class="control-label"></label>
                    <input asp-for="FinishDate" class="form-control" />
                    <span asp-validation-for="FinishDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExamId"></label>
                    <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamsSelectList"></select>
                    <span asp-validation-for="ExamId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="TeacherId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            }
            else
            {
                <label>Successfully assigned new exam to @Model.CourseName Course</label>
            }

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            @if (!Model.IsCreated)
            {
                <button type="submit" class="btn btn-primary">Assign</button>
            }
        </div>
    </div>
</div>
